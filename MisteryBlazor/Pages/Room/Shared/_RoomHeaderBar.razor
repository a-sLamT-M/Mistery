    public string SearchText { get; set; }
}

<div class="room-header mud-theme-primary">
    <div class="room-header-left">
        <span class="room-header-left-icon">
            <MudIcon Size="Size.Medium" Icon="@Icons.Filled.Circle"/>
        </span>
        <div class="room-header-left-text fs-5 fw-bold">
            TEST
        </div>
    </div>
    <div class="room-header-right">
        <div class="room-header-right-icon">
            <span class="room-header-right-ico-notification">
                <MudIcon Size="Size.Medium" Icon="@Icons.Filled.Notifications"/>
            </span>
            <span class="room-header-right-ico-locationedit">
